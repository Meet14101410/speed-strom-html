<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Speed Storm</title>
  <style>
    body {
      margin: 0;
      background: #111;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      color: white;
      font-family: Arial, sans-serif;
      overflow: hidden;
    }
    #game {
      position: relative;
      width: 300px;
      height: 500px;
      background: linear-gradient(#222, #000);
      overflow: hidden;
      border: 3px solid #555;
      border-radius: 10px;
    }
    .road-line {
      position: absolute;
      width: 10px;
      height: 80px;
      background: white;
      left: 145px;
      animation: moveLine 1s linear infinite;
    }
    @keyframes moveLine {
      from { top: -100px; }
      to { top: 600px; }
    }
    #car {
      position: absolute;
      bottom: 20px;
      left: 125px;
      width: 50px;
      height: 80px;
      background: red;
      border-radius: 5px;
    }
    .obstacle {
      position: absolute;
      top: -100px;
      width: 50px;
      height: 80px;
      background: blue;
      border-radius: 5px;
    }
    #score {
      position: absolute;
      top: 10px;
      left: 10px;
      font-size: 18px;
    }
    #gameOver {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 24px;
      display: none;
    }
  </style>
</head>
<body>
  <div id="game">
    <div class="road-line" style="top:0"></div>
    <div class="road-line" style="top:150px"></div>
    <div class="road-line" style="top:300px"></div>
    <div id="car"></div>
    <div id="score">Score: 0</div>
    <div id="gameOver">Game Over<br>Press R to Restart</div>
  </div>

  <script>
    const game = document.getElementById("game");
    const car = document.getElementById("car");
    const scoreEl = document.getElementById("score");
    const gameOverEl = document.getElementById("gameOver");

    let lanes = [25, 125, 225]; // x positions
    let currentLane = 1;
    let obstacles = [];
    let score = 0;
    let gameOver = false;

    // Move car with keyboard
    document.addEventListener("keydown", (e) => {
      if (gameOver && e.key.toLowerCase() === "r") {
        restart();
      }
      if (e.key === "ArrowLeft" || e.key.toLowerCase() === "a") {
        if (currentLane > 0) currentLane--;
      }
      if (e.key === "ArrowRight" || e.key.toLowerCase() === "d") {
        if (currentLane < 2) currentLane++;
      }
      car.style.left = lanes[currentLane] + "px";
    });

    function spawnObstacle() {
      if (gameOver) return;
      let lane = Math.floor(Math.random() * 3);
      let obs = document.createElement("div");
      obs.classList.add("obstacle");
      obs.style.left = lanes[lane] + "px";
      game.appendChild(obs);
      obstacles.push(obs);
    }

    function updateGame() {
      if (gameOver) return;
      score++;
      scoreEl.textContent = "Score: " + score;

      obstacles.forEach((obs, i) => {
        let top = parseInt(obs.style.top || -100);
        obs.style.top = top + 5 + "px";

        // Collision detection
        let carRect = car.getBoundingClientRect();
        let obsRect = obs.getBoundingClientRect();
        if (
          carRect.x < obsRect.x + obsRect.width &&
          carRect.x + carRect.width > obsRect.x &&
          carRect.y < obsRect.y + obsRect.height &&
          carRect.height + carRect.y > obsRect.y
        ) {
          endGame();
        }

        if (top > 600) {
          obs.remove();
          obstacles.splice(i, 1);
        }
      });

      requestAnimationFrame(updateGame);
    }

    function endGame() {
      gameOver = true;
      gameOverEl.style.display = "block";
    }

    function restart() {
      gameOver = false;
      score = 0;
      scoreEl.textContent = "Score: 0";
      obstacles.forEach(o => o.remove());
      obstacles = [];
      gameOverEl.style.display = "none";
      currentLane = 1;
      car.style.left = lanes[currentLane] + "px";
      updateGame();
    }

    setInterval(spawnObstacle, 1500);
    updateGame();
  </script>
</body>
</html>
